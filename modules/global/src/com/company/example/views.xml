                  view="_minimal">
        </property>
        <property name="addressee"
                  view="_minimal">
        </property>
        <property name="executor"
                  view="_minimal">
        </property>
        <property name="sign"
                  view="_minimal">
        </property>
        <property name="author"
                  view="_minimal"/>
        <property name="file"
                  view="_minimal"/>
