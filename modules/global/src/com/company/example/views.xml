                  view="_minimal">
            <property name="code"/>
            <property name="title"/>
            <property name="number"/>
            <property name="serial_number"/>
        </property>
        <property name="affair"
                  view="_minimal">
            <property name="code"/>
            <property name="serial_number"/>
        </property>
        <property name="matching"
                  view="_minimal">
            <property name="personnel_number"/>
