<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.example.web.organizations.OrganizationsEdit"
        datasource="organizationsDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.example.web.organizations">
    <dsContext>
        <datasource id="organizationsDs"
                    class="com.company.example.entity.Organizations"
                    view="organizations-view"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="organizationsDs">
            <column width="250px">
                <field caption="mainMsg://codeCaption"
                       property="code"/>
                <field caption="mainMsg://shortTitleCaption"
                       property="short_title"/>
                <field caption="mainMsg://titleCaption"
                       property="title"
                       rows="2"/>
                <field caption="msg://lawAddresseCaption"
                       property="law_address"
                       rows="2"/>
                <field caption="mainMsg://mailAddressCaption"
                       property="mail_address"
                       rows="2"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
