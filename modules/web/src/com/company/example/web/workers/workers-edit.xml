<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.example.web.workers.WorkersEdit"
        datasource="workersDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.example.web.workers">
    <dsContext>
        <datasource id="workersDs"
                    class="com.company.example.entity.Workers"
                    view="workers-view">
            <datasource id="photoDs"
                        property="photo"/>
        </datasource>
        <collectionDatasource id="subDivisionsDs"
                              class="com.company.example.entity.SubDivision"
                              view="subDivision-view">
            <query>
                <![CDATA[select e from example$SubDivision e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="scrollBox"
            spacing="true">
        <scrollBox id="scrollBox">
            <fieldGroup id="fieldGroup"
                        datasource="workersDs"
                        width="100%">
                <column width="100%">
                    <field caption="mainMsg://personnelNumberCaption"
                           property="personnel_number"
                           width="100%"/>
                    <field id="user"
                           caption="mainMsg://userCaption"
                           property="user"
                           width="100%"/>
                    <field caption="mainMsg://secondNameCaption"
                           property="second_name"
                           width="100%"/>
                    <field caption="mainMsg://firstNameCaption"
                           property="first_name"
                           width="100%"/>
                    <field caption="mainMsg://patronymicCaption"
                           property="patronymic"
                           width="100%"/>
                    <field caption="mainMsg://emailCaption"
                           property="email"
                           width="100%"/>
                    <field caption="mainMsg://phoneCaption"
                           property="phone"
                           width="100%"/>
                    <field caption="mainMsg://photoCaption"
                           property="photo"/>
                    <field caption="mainMsg://subdivisionCaption"
                           optionsDatasource="subDivisionsDs"
                           property="sub_division"
                           width="100%"/>
                </column>
            </fieldGroup>
            <image id="workersPhotoView"
                   height="250px"
                   visible="false"
                   width="250px"/>
        </scrollBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
